.logo_content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30rpx;
}

.logo {
  width: 228rpx;
  height: 228rpx;
  border-radius: 50%;
  margin: 20rpx;
}

label {
  display: flex;
  align-items: center;
  margin: 30rpx 0rpx 30rpx 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: 90%;
  justify-content: space-between;
}

input {
  border: 1px solid #ccc;
  /* height: 50rpx; */
  width: 70%;
  margin-right: 10rpx;
}

.button {
  display: flex;
  justify-content: space-around;
}

button {
  width: 250rpx;
  background: blue;
  color: white;
}



