/* pages/common/orderform/orderform.wxss */
.bg {
  background-color: rgb(250, 242, 242);
  border: 1rpx solid lightgrey;
  border-radius: 20rpx;
  margin: 10rpx 15rpx;
}

.block {
  width: 150rpx;
  height: 60rpx;
  background-color: brown;
  line-height: 60rpx;
  text-align: center;
  margin-right: 20rpx;
  color: #ffffff;
}

.cell {
  display: flex;
  margin: 30rpx 20rpx;
}

.content {
  flex: 1;
}

.bottom {
  margin: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.btm_img {
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
}

.img {
  width: 100%;
  height: 100%;
}

.btm_middle {
  margin: 0 20rpx;
  font-size: 36rpx;
  flex: .8;
}


.btm_rt {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.rt_btm {
  color: red;
}

.total {
  border-bottom: 1px dashed red;
  margin: 30rpx;
  padding-bottom: 30rpx;
  display: flex;
  justify-content: flex-end;
}

.total_lf {
  margin-right: 30rpx;
}

.red {
  color: red;
}

.btn_view {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 30rpx;
  flex-direction: row;
}

.btn {
  display: inline-block;
  font-size: 25rpx;
  border: 2px solid blue;
  color: blue;
  width: 170rpx;
  height: 70rpx;
  line-height: 70rpx;
}